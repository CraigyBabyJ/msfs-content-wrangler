<Application
    x:Class="MSFS.ContentWrangler.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Fallback effects so StartupUri windows can resolve these even if merged dictionaries fail to load. -->
            <DropShadowEffect x:Key="WindowShadow"
                              BlurRadius="18"
                              Opacity="0.4"
                              ShadowDepth="0"
                              Color="#000000" />
            <DropShadowEffect x:Key="CardShadow"
                              BlurRadius="10"
                              Opacity="0.28"
                              ShadowDepth="0"
                              Color="#000000" />

            <ResourceDictionary.MergedDictionaries>
                <!-- Use explicit pack URI to avoid relative-URI quirks during BAML loading. -->
                <ResourceDictionary Source="pack://application:,,,/MSFS.ContentWrangler.App;component/Themes/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
