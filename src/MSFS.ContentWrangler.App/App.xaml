<Application
    x:Class="MSFS.ContentWrangler.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Load base styles early so implicit styles (Button/TabControl/etc) apply correctly. -->
                <ResourceDictionary Source="Themes/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Effects are kept here (not in AppStyles.xaml) to avoid duplicate keys and to stay available globally. -->
            <DropShadowEffect x:Key="WindowShadow"
                              BlurRadius="18"
                              Opacity="0.4"
                              ShadowDepth="0"
                              Color="#000000" />
            <DropShadowEffect x:Key="CardShadow"
                              BlurRadius="10"
                              Opacity="0.28"
                              ShadowDepth="0"
                              Color="#000000" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
