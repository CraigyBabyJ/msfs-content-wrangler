<Window
    x:Class="MSFS.ContentWrangler.App.ContentXmlPickerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Choose Content.xml"
    SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    ShowInTaskbar="False"
    Icon="/icons/app.ico"
    Background="Transparent">

    <Border Background="{DynamicResource SurfaceAltBrush}"
            CornerRadius="10"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            Effect="{DynamicResource CardShadow}">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Select a Content.xml file:"
                       Margin="0,0,0,8"
                       Foreground="{DynamicResource TextSecondaryBrush}" />

            <ComboBox x:Name="PickerBox"
                      Grid.Row="1"
                      MinWidth="640"
                      ToolTip="Select which Content.xml to load."
                      Style="{DynamicResource ModernComboBoxStyle}" />

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,12,0,0">
                <Button Content="OK"
                        Width="90"
                        IsDefault="True"
                        Click="OnOkClick"
                        Margin="0,0,6,0"
                        ToolTip="Load the selected Content.xml."
                        Style="{DynamicResource SecondaryActionButton}" />
                <Button Content="Cancel"
                        Width="90"
                        IsCancel="True"
                        Click="OnCancelClick"
                        ToolTip="Cancel."
                        Style="{DynamicResource SecondaryActionButton}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
